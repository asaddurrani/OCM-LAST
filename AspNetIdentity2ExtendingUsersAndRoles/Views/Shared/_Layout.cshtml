@using AspNetIdentity2ExtendingUsersAndRoles.Helper
<!DOCTYPE html>
<html lang="@CultureHelper.GetCurrentNeutralCulture()" dir="@(CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css" + (CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    @Styles.Render("~/Content/siteCss")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Bundle/BaseLibs")
    @Scripts.Render("~/Bundle/CentaurusLibs")
    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap" + (IstMvcFramework.Helper.CultureHelper.IsRighToLeft() ? "-rtl" : ""))*@

    <script src="~/Scripts/App/requireConfig.js"></script>


    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @*<script src="~/Scripts/jquery.blockUI.js"></script>*@
    <script src="~/Scripts/jquery-ui-1.10.4.js"></script>
    @Scripts.Render("~/bundles/bootstrap" + (CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    <link rel="stylesheet" href="~/Content/Centaurus/Centaurus/css/libs/fullcalendar.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Centaurus/Centaurus/css/libs/fullcalendar.print.css" type="text/css" media="print" />
    @Styles.Render("~/Content/Centaurus/Centaurus/css/bundleCentaurus/css")

    @* If Debuggin is Enabled then pick css *@
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <link href="~/Content/less/MainSite.css" rel="stylesheet" />
    }
    else
    {
        @Styles.Render("~/Bundle/AppLess")
    }

    @Styles.Render("~/Bundles/BaseCss")
    @Styles.Render("~/Content/Centaurus/base/css")
    <link type="image/x-icon" href="favicon.png" rel="shortcut icon" />
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300|Titillium+Web:200,300,400' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/App/architecture.js"></script>
</head>
<body class="theme-blue-gradient">
    <header class="navbar" id="header-navbar">


        <div class="container">

            <a href="~/Dashboard/Index" id="header" class="my-navigator navbar-brand">

                <img src="~/Content/Centaurus/Centaurus/img/logo.png" id="header-logo" alt="" class="normal-logo logo-white" height="25" style="margin-top:5px;" />
                <img src="~/Content/Centaurus/Centaurus/img/mpc_beta.jpg" id="header-logo-beta" alt="" class="normal-logo logo-white" height="18" style="margin-top:5px;margin-left:10px;" />
            </a>

            <div class="clearfix">

                <button class="navbar-toggle" data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="fa fa-bars"></span>
                </button>
                <div class="nav-no-collapse navbar-left pull-left hidden-sm hidden-xs">
                    <ul class="nav navbar-nav pull-left">
                        <li>
                            <a class="btn" id="make-small-nav">
                                <i class="fa fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                </div>


                <div class="nav-no-collapse pull-right" id="header-nav">
                    <ul class="nav navbar-nav pull-right">
                        @Html.Partial("_LoginPartial")
                        <li class="dropdown profile-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">
                                    @*@if (User != null && User.Identity != null)
                                        {
                                            @User.Identity.Name
                                        }*@
                                </span> <b class="caret"></b>
                                <div class="user-positioner" style="position:fixed;">

                                </div>
                            </a>
                            <ul class="dropdown-menu">
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                                    <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                                }
                                
                                @*<li><a href="https://myprintcloud.com/Dashboard/EditProfile"><i class="fa fa-user"></i>Profile</a></li>
                                <li><a href="~/Home/Logout"><i class="fa fa-power-off"></i>Logout</a></li>*@
                            </ul>
                        </li>
                        <li class="hidden-xxs">
                            <a class="btn" href="~/Home/Logout">
                                <i class="fa fa-power-off"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div id="page-wrapper" class="container">
        <div class="row">
            <div id="nav-col">
                <section id="col-left" class="col-left-nano">
                    <div id="col-left-inner" class="col-left-nano-content">

                        @RenderSection("leftmenue", required: false)

                        @* Test left menue starts here*@
                        <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                            <ul class="nav nav-pills nav-stacked" id="Navigation-bar">
                                <li id="lidashboard">
                                    <a href="~/Dashboard/Index" class="my-navigator" id="anchor-dashboard">
                                        <i class="fa fa-dashboard"></i>
                                        <span>Dashboard(Todo*)</span>
                                    </a>
                                </li>
                                <li id="licrm">
                                    <a href="~/Record/Home/Index" class="my-navigator">
                                        <i class="fa fa-users"></i>
                                        <span>Change Oil</span>
                                    </a>
                                </li>
                                <li id="listores">
                                    <a href="~/Oil/Oil/Index" class="my-navigator">
                                        <i class="fa fa-th-large"></i>
                                        <span>Oil</span>
                                    </a>
                                </li>
                                <li id="lioilFilter">
                                    <a href="~/OilFilter/OilFilter/Index" class="my-navigator">
                                        <i class="glyphicon glyphicon-list-alt" style="margin-top:14px;"></i>
                                        <span>Oil Filter</span>
                                    </a>
                                </li>
                                <li id="liairFilter">
                                    <a href="~/AirFilter/AirFilter/Index" class="my-navigator">
                                        <i class="glyphicon glyphicon-list-alt" style="margin-top:14px;"></i>
                                        <span>Air Filter</span>
                                    </a>
                                </li>
                                <li id="liBrakeOil">
                                    <a href="~/BrakeOil/BrakeOil/Index" class="my-navigator">
                                        <i class="glyphicon glyphicon-list-alt" style="margin-top:14px;"></i>
                                        <span>Brake Oil</span>
                                    </a>
                                </li>
                                <li id="liPowerSteeringOil">
                                    <a href="~/PowerSteeringOil/PowerSteeringOil/Index" class="my-navigator">
                                        <i class="glyphicon glyphicon-list-alt" style="margin-top:14px;"></i>
                                        <span>Power Steering Oil</span>
                                    </a>
                                </li>
                                <li id="lisettings">
                                    <a href="~/Settings" class="my-navigator">
                                        <i class="fa fa-wrench"></i>
                                        <span>Settings</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        @* Test Left menue ends here*@
                    </div>

                </section>
            </div>
            @*content wrapper goes here*@
            <div id="content-wrapper">
                @RenderBody()
                <div id="spinner" style="display: none">
                </div>
                <div id="siteUrl">
                </div>
                <footer id="footer-bar" class="row">
                    <p id="footer-copyright" class="col-xs-12">
                        &copy; @DateTime.Now.Year Powered by <a href="http://www.myprintcloud.com/" target="_blank">MyPRINTCloud</a>
                    </p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)
</body>
</html>
